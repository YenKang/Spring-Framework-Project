<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
	<!-- 部署一個sayHello的bean -->
	<bean id="hello" class="com.tibame.domain.TWHello"></bean>
	
	<!-- deploy TibameHello 元件規範 -->
	<bean id="tibamehello" class="com.tibame.domain.TibameHello">
		<!-- constructor injection  -->
		<constructor-arg index="0">
			<value>TSMC</value>
		</constructor-arg>
	</bean>
	
	<bean id="tibamehello2" class="com.tibame.domain.TibameHello">
		<!-- property injection like setter -->
		<property name="companyName">
			<value>Garmin</value>
		</property>
	</bean>
	
	<!-- 空參數建構子 -->
	<bean id="tibamehello3" class="com.tibame.domain.TibameHello" init-method="init">
	</bean>
	
	<!-- 注入控制反轉 -->
	<bean id="emp1" class="com.tibame.domain.Employee">
		<constructor-arg index="0">
			<value>001</value>
		</constructor-arg>
		<constructor-arg index="1">
			<value>Bryan</value>
		</constructor-arg>
	</bean>
	
	<bean id="boss" class="com.tibame.domain.Boss">
		<property name="bossName">
			<value>Steve Jobs</value>
		</property>
	</bean>
	
	<bean id="com" class="com.tibame.domain.Company">
		<!-- 依存注入 -->
		<property name="boss" ref="boss"/>
	</bean>
	
</beans>